{% extends '::base.html.twig' %}

{% block content %}

<h1>Path edit</h1>

<form action="{{ path('path_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">Save</button>
        
        <form action="{{ path('path_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>        
    </p>
</form>

&larr; <a href="{{ path('path') }}">Back to the list</a>

{% endblock %}
