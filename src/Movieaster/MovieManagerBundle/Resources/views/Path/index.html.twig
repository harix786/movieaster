{% extends '::base.html.twig' %}

{% block content %}

<h1>Path list</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Path</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('path_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.path }}</td>
            <td>
               <a href="{{ path('path_show', { 'id': entity.id }) }}"  class="btn btn-info">show</a>
               <a href="{{ path('path_edit', { 'id': entity.id }) }}"  class="btn btn-primary">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('path_new') }}" class="btn btn-primary">
    Create a new entry
</a>

<br />
<br />

&larr; <a href="{{ asset('../') }}">Back to MovieAster</a>

{% endblock %}
