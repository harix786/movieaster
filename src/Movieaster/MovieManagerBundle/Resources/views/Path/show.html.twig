{% extends '::base.html.twig' %}

{% block body %}

<h1>Path</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Path</th>
            <td>{{ entity.path }}</td>
        </tr>
    </tbody>
</table>


<a href="{{ path('path_edit', { 'id': entity.id }) }}"  class="btn btn-primary">
    Edit
</a>

<br /><br />

<form action="{{ path('path_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<br />

<a href="{{ path('path') }}">
    Back to the list
</a>


{% endblock %}